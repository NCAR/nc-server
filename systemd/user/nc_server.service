[Unit]
Description=RPC server for writing to NetCDF files

[Service]
Type=forking
Environment=LANG=C PATH=/usr/bin:/opt/nidas/bin

ExecStart=/opt/nidas/bin/nc_server -z

TimeoutStartSec=5
TimeoutStopSec=10

Restart=on-failure

RestartSec=5

KillMode=control-group

[Install]
WantedBy=default.target

